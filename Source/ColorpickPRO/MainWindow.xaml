<Window x:Class="ColorpickPRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorpickPRO"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="Height" Width="600" Foreground="White" Background="#212121">
    <DockPanel>
    <StackPanel Orientation="Vertical" Margin="10,5,10,10" HorizontalAlignment="Center" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
            <Label Content="COLORPICK - PRO" Foreground="White" FontSize="30" FontWeight="SemiBold"  VerticalAlignment="Center"></Label>
            <Image Source="cpicon.png" Width="52" Height="52" />
        </StackPanel>
        <local:ColorPickerControl x:Name="ColorPickerControl" HorizontalAlignment="Left"/>
        <local:ColorFromDesktopControl x:Name="ColorFromDesktopControl" Margin="10,10,10,10"/>
            <local:ColorModelsControl x:Name="ColorModelsControl" HorizontalAlignment="Left"/>
        </StackPanel>
    </DockPanel>
</Window>
