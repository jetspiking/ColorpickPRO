<UserControl x:Class="ColorpickPRO.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorpickPRO"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Labels -->
        <TextBlock Text="CURRENT COLOR" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="PICK COLOR" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0"/>

        <!-- Color boxes -->
        <Rectangle x:Name="selectedColor" Width="256" Height="256" Stroke="Black" Grid.Row="1" Grid.Column="0">
            <Rectangle.Fill>
                <SolidColorBrush x:Name="selectedColorBrush" Color="Red"/>
            </Rectangle.Fill>
        </Rectangle>

        <Border x:Name="colorBox" Width="256" Height="256" BorderBrush="Black" BorderThickness="1" 
        MouseLeftButtonDown="ColorBox_MouseLeftButtonDown"
        MouseLeftButtonUp="ColorBox_MouseLeftButtonUp"
        MouseMove="ColorBox_MouseMove"
        Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <Canvas>
                <Grid Width="256" Height="256">
                    <Rectangle Width="256" Height="256">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="White"/>
                            <GradientStop x:Name="saturationEnd" Offset="1" Color="Red"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Width="256" Height="256">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="Transparent"/>
                            <GradientStop Offset="1" Color="Black"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <!-- Ellipse to indicate selected color position -->
                </Grid>
                <Ellipse x:Name="colorPositionEllipse" Width="16" Height="16" Stroke="Black" Fill="Transparent" Visibility="Hidden" IsHitTestVisible="False"/>
            </Canvas>
        </Border>


        <!-- Hue Slider -->
        <Border Grid.Row="1" Grid.Column="2" Width="32" Height="256" BorderBrush="Black" BorderThickness="1" VerticalAlignment="Center" Margin="10,0,0,0">
            <Grid>
                <Rectangle x:Name="hueRectangle" Width="30" Height="256" VerticalAlignment="Stretch" MouseDown="HueRectangle_MouseDown" MouseMove="hueRectangle_MouseMove" MouseUp="hueRectangle_MouseUp" MouseLeave="hueRectangle_MouseLeave" >
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Red" Offset="0.0"/>
                            <GradientStop Color="Yellow" Offset="0.166"/>
                            <GradientStop Color="Green" Offset="0.333"/>
                            <GradientStop Color="Cyan" Offset="0.5"/>
                            <GradientStop Color="Blue" Offset="0.666"/>
                            <GradientStop Color="Magenta" Offset="0.833"/>
                            <GradientStop Color="Red" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Thumb x:Name="hueThumbControl" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,0,0,0" Width="30" Height="20" Background="Gray" Opacity="0.8" Canvas.Top="0" />
            </Grid>
        </Border>

        <!-- Hex strings -->
        <TextBlock x:Name="selectedColorHex" Text="#FF0000" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
        <TextBlock x:Name="hoverColorHex" Text="#FF0000" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="10,0,0,0"/>
    </Grid>
</UserControl>
